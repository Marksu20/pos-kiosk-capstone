      if (orderNumber.includes(searchQuery) || customerName.includes(searchQuery)) {
        row.style.display = '';
        hasResults = true;
      } else {
        row.style.display = 'none';
      }
    });
    document.getElementById('ts-no-results').style.display = hasResults ? 'none' : 'block';
  })
</script>


 
